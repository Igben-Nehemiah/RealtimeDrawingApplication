<Window x:Class="WPFGraphicUserInterface.Views.CreateAccountWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGraphicUserInterface.Views"
        mc:Ignorable="d"
        Title="CreateAccountWindowView" Height="200" Width="350" >
    <Window.Resources>
        <!--<Style TargetType="Button" x:Key="CustomButton1">
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Stroke" Value="white"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style>-->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Full Name"
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="11" FontWeight="DemiBold"
                   Margin="20,5,0,0"
                   Grid.Row="1"
                   Grid.Column="0"/>
        <TextBox
            TextAlignment="Left"
            VerticalAlignment="Center"
            FontSize="11" FontWeight="DemiBold"
            BorderBrush="Gray"
            Margin="20,5,30,0"
            BorderThickness="1"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="3"/>

        <TextBlock Text="Email"
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="11" FontWeight="DemiBold"
                   Margin="20,5,0,0"
                   Grid.Row="2"
                   Grid.Column="0"/>
        <TextBox
            TextAlignment="Left"
            VerticalAlignment="Center"
            FontSize="11" FontWeight="DemiBold"
            BorderBrush="Gray"
            Margin="20,5,30,0"
            BorderThickness="1"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"/>

        <TextBlock Text="Password"
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="11" FontWeight="DemiBold"
                   Margin="20,5,0,0"
                   Grid.Row="3"
                   Grid.Column="0"/>
        <PasswordBox
            VerticalAlignment="Center"
            FontSize="11" FontWeight="DemiBold"
            BorderBrush="Gray"
            Margin="20,5,30,0"
            BorderThickness="1"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="3"/>

        <Border CornerRadius="15" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                BorderThickness="1"
                BorderBrush="Gray"
                Grid.Column="0" 
                Grid.Row="4"
                Grid.ColumnSpan="4"
                Margin="50,0,50,0">
            <Button 
                Grid.Column="0" 
                Grid.Row="4"
                Grid.ColumnSpan="4"
                Margin="20,5,30,0"
                Background="Transparent"
                Height="30"
                Padding="0,0,0,0"
                BorderBrush="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
                
                <Button.Content>
                        <Label Content="Create"
                       Foreground="Gray"
                           FontWeight="Bold"
                       FontSize="11"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"/>
                </Button.Content>
            </Button>
        </Border>

    </Grid>
</Window>
