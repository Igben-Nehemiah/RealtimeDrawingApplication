<UserControl x:Class="WPFGraphicUserInterface.Views.SharedUsersPaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGraphicUserInterface.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style TargetType="Label" x:Key="labelBorderGlow">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseDirectlyOver" Value="True" >
                    <Setter Property="BorderBrush" Value="AliceBlue"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconGlow" TargetType="Path">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Stroke" Value="white"/>
                    <Setter Property="StrokeThickness" Value="2"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Background="#a7b5d1"
                Margin="0,34,0,0">
        <DockPanel HorizontalAlignment="Center" Margin="0, 5, 0, 15">
            <Label Content="Shared Users Window" 
                   DockPanel.Dock="Left"
                   FontSize="14"/>
            <Path DataContext="{Binding ElementName=PaneOptionsPopUp}" x:Name="SharedUsersWindowPath" Fill="Black" 
                      HorizontalAlignment="Stretch" 
                      Style="{StaticResource IconGlow}"
                      MouseDown="UpPath_MouseDown"
                  VerticalAlignment="Center"
                  Margin="0,-5,0,0"/>
        </DockPanel>

        <ListBox x:Name="SharedUsersListBox">
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="True"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"/>
                    <TextBlock
                        VerticalAlignment="Center">
                        Igben Obomaese Nehemiah
                    </TextBlock>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="True"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"/>
                    <TextBlock
                        VerticalAlignment="Center">
                        Sunday Benjamin
                    </TextBlock>
                </StackPanel>
            </ListBoxItem>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="True"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"/>
                <TextBlock
                    VerticalAlignment="Center">
                    Endurance Egbe
                </TextBlock>
            </StackPanel>
        </ListBox>
       
        <Button  Style="{StaticResource ResourceKey=RoundCorner}" 
                 Margin="75,20,75,0" 
                 VerticalAlignment="Stretch">
            Add new User
        </Button>

        <Popup x:Name="PaneOptionsPopUp" 
                       Placement ="MousePoint" 
                       StaysOpen="False" 
                       PopupAnimation="Fade"
                       AllowsTransparency="True">
            <StackPanel Background="AliceBlue">
                <TextBlock Text="Shared Users Pane"/>
                <TextBlock Text="Property Pane"/>
                <TextBlock Text="Project Pane"/>
            </StackPanel>
        </Popup>

    </StackPanel>
    
    
</UserControl>
