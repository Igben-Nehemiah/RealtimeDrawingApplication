<UserControl x:Class="WPFGraphicUserInterface.Views.SharedUsersPaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGraphicUserInterface.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style TargetType="Label" x:Key="labelBorderGlow">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseDirectlyOver" Value="True" >
                    <Setter Property="BorderBrush" Value="AliceBlue"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconGlow" TargetType="Path">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Stroke" Value="white"/>
                    <Setter Property="StrokeThickness" Value="2"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Background="#a7b5d1"
                Margin="0,34,0,0">
        <DockPanel HorizontalAlignment="Center" Margin="0, 5, 0, 15">
            <Label Content="Shared Users Window" 
                   DockPanel.Dock="Left"
                   FontSize="14"/>
            <Label FontSize ="14">
                <Path x:Name="SharedUsersWindowPath" Fill="Black" 
                      Data="M7.41,15.41L12,10.83L16.59,15.41L18,14L12,8L6,14L7.41,15.41Z"
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Style="{StaticResource IconGlow}"
                      MouseDown="UpPath_MouseDown"/>
            </Label>
        </DockPanel>

        <Grid Margin="0, 0, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <CheckBox IsChecked="True"
                        Height="20" Width="20"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Grid.Column="0"
                        Grid.Row="0"/>
            <TextBlock Text="Igben Obomaese Nehemiah"
                        FontWeight="DemiBold"
                        TextAlignment="Left"
                        HorizontalAlignment="Stretch"
                        Margin="5,0,0,0"
                        VerticalAlignment="Stretch"
                        Grid.Column="1"
                        Grid.Row="0"/>
        </Grid>

        <Grid Margin="0, 10, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <CheckBox IsChecked="True"
                        Height="20" Width="20"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Grid.Column="0"
                        Grid.Row="0"/>
            <TextBlock Text="Benjamin Sunday"
                        FontWeight="DemiBold"
                        TextAlignment="Left"
                        HorizontalAlignment="Stretch"
                        Margin="5,0,0,0"
                        VerticalAlignment="Stretch"
                        Grid.Column="1"
                        Grid.Row="0"/>
        </Grid>

        <Grid Margin="0, 10, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <CheckBox IsChecked="True"
                        Height="20" Width="20"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Grid.Column="0"
                        Grid.Row="0"/>
            <TextBlock Text="Endurance Egbe"
                        FontWeight="DemiBold"
                        TextAlignment="Left"
                        HorizontalAlignment="Stretch"
                        Margin="5,0,0,0"
                        VerticalAlignment="Stretch"
                        Grid.Column="1"
                        Grid.Row="0"/>
        </Grid>
        <Button  Style="{StaticResource ResourceKey=RoundCorner}" Margin="50,20,50,0" 
                 FontSize="14">
            Add new User
        </Button>

        <Popup x:Name="PaneOptionsPopUp" IsOpen="{Binding Path=IsPathUp}" 
                       Placement ="MousePoint" 
                       StaysOpen="False" 
                       PopupAnimation="Fade"
                       AllowsTransparency="True">
            <StackPanel Background="AliceBlue">
                <TextBlock Text="Shared Users Pane"/>
                <TextBlock Text="Property Pane"/>
                <TextBlock Text="Project Pane"/>
            </StackPanel>
        </Popup>

    </StackPanel>
    
    
</UserControl>
